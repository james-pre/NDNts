{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs --no-run-if-empty docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@9.1.4+sha256.30a1801ac4e723779efed13a21f4c39f9eb6c9fbb4ced101bce06b422593d7c9",
  "devDependencies": {
    "@types/node": "^20.12.13",
    "@types/wtfnode": "^0.7.3",
    "@typescript/lib-dom": "npm:@types/web@0.0.147",
    "@vitest/coverage-v8": "^1.6.0",
    "@yoursunny/xo-config": "0.58.0",
    "codedown": "^3.1.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typescript": "~5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": "^20.12.0 || ^22.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level-1",
        "graphql-request"
      ]
    }
  }
}
