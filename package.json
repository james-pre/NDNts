{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs --no-run-if-empty docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@8.15.7+sha256.50783dd0fa303852de2dd1557cd4b9f07cb5b018154a6e76d0f40635d6cee019",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/wtfnode": "^0.7.3",
    "@typescript/lib-dom": "npm:@types/web@0.0.143",
    "@vitest/coverage-v8": "^1.5.0",
    "@yoursunny/xo-config": "0.57.2",
    "codedown": "^3.1.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typescript": "~5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": "^18.18.0 || ^20.10.0 || ^21.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@browserfs/core",
        "abstract-level-1"
      ]
    }
  }
}
